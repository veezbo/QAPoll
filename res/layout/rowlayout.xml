<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp" >
	<View
	android:id="@+id/separator"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_alignParentTop="true"
    android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/separator"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="16dp"
        android:text="title"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/QuestionPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question_title"
        android:layout_below="@+id/question_title"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:text="preview"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/numer_of_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/question_rank"
        android:layout_alignBottom="@+id/question_rank"
        android:layout_toLeftOf="@+id/upvote_box"
        android:layout_marginRight="5dp"
        android:text="votes"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/upvote_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numer_of_votes"
        android:layout_alignBottom="@+id/numer_of_votes"
        android:layout_alignParentRight="true"
        android:paddingRight="6dp"
        android:clickable="true"
        android:focusable="false"
        android:text="like" />

    <TextView
        android:id="@+id/question_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="9dp"
        android:layout_below="@+id/question_title"
        android:text="rank 1"
        android:textColor="@android:color/black" />

</RelativeLayout>
