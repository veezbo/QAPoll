<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp" >

    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/QuestionPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question_title"
        android:layout_below="@+id/question_title"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/question_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question_title"
        android:text="rank 1"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/numer_of_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/question_rank"
        android:layout_alignBottom="@+id/question_rank"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/upvote_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/numer_of_votes"
        android:text="like"
        android:focusable="false"
        android:clickable="true" />

</RelativeLayout>
